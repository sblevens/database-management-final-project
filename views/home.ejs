<!DOCTYPE html>
<html lang="en">

<head>
    <title>Home</title>
    <link rel="icon" href="favicon.png">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    
    <style>
        #content{
            margin: 0 auto;
            width: 90%;
            padding-top: 15px;
        }
        table{
            /* table-layout: fixed; */
            width: 100%;
        }

        .right{
            float:right;
        }
    </style>
</head>

<body>
    <%- include('nav.ejs') %>
    <div id="content">
        <div class="form-group row">
            <div class="col-sm-9">
                <h1>Uncompleted Tasks</h1>
            </div>
            <div class="col-sm-3 right">
                <button class="add right" type="button"  id="open_task"><a href="/add_todo">Add Task To-Do</a></button>
                <button class="add right" type="button"  id="add_task">Create New Task Detail</button>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Task</th>
                    <th>Due Date</th>
                    <th>Task Location</th>
                    <th>Difficulty</th>
                    <th>Assigned</th>
                </tr>
            </thead>
            <tbody>
                <% for(const task of data) { %>
                <tr>
                    <td><a href="/details/<%=task.id%>">
                        <%= task.task_name %>
                    </a></td>
                    <td>
                        <%= task.due_date %>
                    </td>
                    <td>
                        <%= task.task_location %>
                    </td>
                    <td>
                        <%= task.difficulty %>
                    </td>
                    <td>
                        <input type="checkbox" disabled <%= task.assigned ? "checked" : "" %>>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    
</body>

</html>